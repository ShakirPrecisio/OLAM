                                        android:layout_width="@dimen/_22sdp"
                                        android:src="@drawable/ic_calender"/>
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/truck_no"
                                android:textColor="@color/colorPrimaryDark"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_centerInParent="true"
                                android:layout_centerHorizontal="true"/>
                            <LinearLayout
                                android:id="@+id/linTruckNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:background="@drawable/bg_for_editest">

                                <!--<TextView
                                    android:id="@+id/txtTruckNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/txt_spinner_color"
                                    android:text="@string/select"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_gravity="center"
                                    android:singleLine="true"
                                    android:inputType="none"
                                    android:textSize="@dimen/_12sdp"
                                    android:focusable="false"
                                    android:drawableRight="@drawable/bg_down_arrow_"
