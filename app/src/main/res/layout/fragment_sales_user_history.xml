<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentView1"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:layout_marginTop="?actionBarSize"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/bg_top_rounded_background">

        <LinearLayout
            android:background="@color/gray_300"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/_47sdp">

        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeUserHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_marginBottom="@dimen/_25sdp">

                    <!--    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:orientation="vertical"
                            android:background="@color/colorPrimary"
                            tools:ignore="UselessParent">

                        </RelativeLayout>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="-18dp"
                            app:cardCornerRadius="@dimen/_20sdp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/bg_card_color">
                        </androidx.cardview.widget.CardView>-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">
                        <LinearLayout
                            android:id="@+id/linApprovalList"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:elevation="@dimen/_70sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@color/colorPrimary"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_alignParentEnd="true">
                            <TextView
                                android:id="@+id/txtApprovalList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/Approval_list"
                                android:fontFamily="@font/poppins_medium"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:gravity="center"
                                />
                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/relvNoDataFound"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:visibility="gone"
                            android:layout_centerInParent="true">
                            <TextView
                                android:id="@+id/tvNoDataFound"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/no_data_found"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="@dimen/_18sdp"
                                android:textColor="@color/gray_1100"
                                android:fontFamily="@font/poppins_regular"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relvNoInternet"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:visibility="gone"
                            android:layout_centerInParent="true">
                            <TextView
                                android:id="@+id/tvNoInterner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/no_internet_connection"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="@dimen/_16sdp"
                                android:textColor="@color/gray_1100"
                                android:fontFamily="@font/poppins_bold"/>
                            <Button
                                android:id="@+id/btnRetry"
                                android:layout_height="wrap_content"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_below="@+id/tvNoInterner"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="@string/retry"/>

                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/linContent"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_below="@+id/linApprovalList"
                            android:visibility="visible"
                            >

                            <LinearLayout
                                android:id="@+id/linFilterView"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:visibility="visible"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_below="@+id/card_Header">
                                <LinearLayout
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/_3sdp">
                                    <TextView
                                        android:gravity="center"
                                        android:textSize="@dimen/_11sdp"
                                        android:textAllCaps="false"
                                        android:layout_marginEnd="@dimen/_3sdp"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:text="@string/wagon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"/>

                                    <TextView
                                        android:id="@+id/txtfilterWagon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="start"
                                        android:layout_marginStart="@dimen/_3sdp"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:text="@string/select"
                                        android:textColor="@color/menu_text_color"
                                        android:textSize="@dimen/_12sdp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_3sdp">
                                    <TextView
                                        android:gravity="center"
                                        android:textSize="@dimen/_11sdp"
                                        android:textAllCaps="false"
                                        android:layout_marginEnd="@dimen/_3sdp"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:text="@string/Boreau_no"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"/>

                                    <TextView
                                        android:id="@+id/txtFilterBordereuNo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="start"
                                        android:layout_marginStart="@dimen/_3sdp"
                                        android:text="@string/select"
                                        android:textColor="@color/menu_text_color"
                                        android:textSize="@dimen/_12sdp" />
                                </LinearLayout>
                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvLogsUserHistory"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:overScrollMode="never"
                                android:layout_marginTop="@dimen/_5sdp"
                                tools:listitem="@layout/row_item_bodreu_history"
                                android:focusableInTouchMode="true"
                                />

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivAddLoadingBodreu"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="bottom|right"
        android:background="@drawable/_ripple"
        android:layout_margin="16dp"
        app:rippleColor="@color/white"
        android:visibility="gone"
        android:src="@drawable/icon_add"
        app:layout_anchor="@id/nestedScrollView"
        app:layout_anchorGravity="bottom|right|end" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>