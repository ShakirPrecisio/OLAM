<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:layout_marginTop="?actionBarSize"
    android:clickable="true"
    android:focusable="true"
    tools:context=".forestry_management.fragment.TreeDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/bg_top_rounded_background">

        <Button
            android:id="@+id/btnTreeDetailsSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/bg_small_curve_action_button"
            android:text="@string/submit"
            android:visibility="gone"
            android:textColor="@color/white" />

        <ProgressBar
            android:id="@+id/submitProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:visibility="gone"
            android:background="@drawable/bg_for_editext_non_editable"
            />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnTreeDetailsSubmit"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardScanTreeDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_34sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_34sdp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardElevation="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/linBarcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:contentDescription="@string/barcodeScannerButton"
                                android:src="@drawable/ic_barcode"
                                app:rippleColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linBarcode"
                            android:background="@color/label_text_bg_"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:text="@string/scan_barcod"
                                android:textColor="@color/listing_text_color"
                                android:textSize="@dimen/_14sdp" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/or"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/enter_tree_id"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:id="@+id/linTreeId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:background="@drawable/bg_for_editext_non_editable"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/txtTreeIdTreeDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:backgroundTint="@color/gray_200"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="number"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textColor="@color/text_grey_color"
                        android:textColorHint="@color/gray"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutDetails"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_28sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/no_of_parcel"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_12sdp" />


                    <LinearLayout
                        android:id="@+id/linParcelNos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:background="@drawable/bg_for_editext_non_editable"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtParcelNos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:backgroundTint="@color/white"
                            android:focusable="false"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="none"
                            android:singleLine="true"
                            android:text="@string/select"
                            android:textColor="@color/txt_spinner_color"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/_12sdp"
                            app:drawableRightCompat="@drawable/bg_down_arrow_"
                            app:drawableTint="@color/bg_arrow_tint" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/species"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:id="@+id/linCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:background="@drawable/bg_for_editext_non_editable"
                        android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtSpecies"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:backgroundTint="@color/white"
                                android:focusable="false"
                                android:fontFamily="@font/poppins_regular"
                                android:inputType="none"
                                android:singleLine="true"
                                android:text="@string/select"
                                android:textColor="@color/txt_spinner_color"
                                android:textColorHint="@color/gray"
                                android:textSize="@dimen/_12sdp"
                                app:drawableRightCompat="@drawable/bg_down_arrow_"
                                app:drawableTint="@color/bg_arrow_tint" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/quality"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:id="@+id/linQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:background="@drawable/bg_for_editext_non_editable"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtQuality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:backgroundTint="@color/white"
                            android:focusable="false"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="none"
                            android:singleLine="true"
                            android:text="@string/select"
                            android:textColor="@color/txt_spinner_color"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/_12sdp"
                            app:drawableRightCompat="@drawable/bg_down_arrow_"
                            app:drawableTint="@color/bg_arrow_tint" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/dia_cm"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:id="@+id/linDia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:background="@drawable/bg_for_editext_non_editable"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/txtDia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:backgroundTint="@color/gray_200"
                            android:fontFamily="@font/poppins_regular"
                            android:singleLine="true"
                            android:inputType="numberDecimal"
                            android:textColor="@color/text_grey_color"
                            android:textColorHint="@color/gray"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_23sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_23sdp"
                        app:cardBackgroundColor="@color/light_green_color"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_16sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_5sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/concession"
                                    android:textColor="@color/dark_text_color"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/txtConcession"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:text=""
                                    android:textColor="@color/text_grey_color"
                                    android:textSize="@dimen/_11sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_5sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/ufg"
                                    android:textColor="@color/dark_text_color"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/txtUFG"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:text=""
                                    android:textColor="@color/text_grey_color"
                                    android:textSize="@dimen/_11sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_5sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/aac"
                                    android:textColor="@color/dark_text_color"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/txtAAC"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:text=""
                                    android:textColor="@color/text_grey_color"
                                    android:textSize="@dimen/_11sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_5sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/cbm"
                                    android:textColor="@color/dark_text_color"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/txtTreeCbm"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:text=""
                                    android:textColor="@color/text_grey_color"
                                    android:textSize="@dimen/_11sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_5sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/user_info"
                                    android:textColor="@color/dark_text_color"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/txtUserInfo"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:text=""
                                    android:textColor="@color/text_grey_color"
                                    android:textSize="@dimen/_11sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_5sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/data_time"
                                    android:textColor="@color/dark_text_color"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/txtDateTime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:text=""
                                    android:textColor="@color/text_grey_color"
                                    android:textSize="@dimen/_11sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_5sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/location"
                                    android:textColor="@color/dark_text_color"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/txtLocation"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.3"
                                    android:text=""
                                    android:textColor="@color/text_grey_color"
                                    android:textSize="@dimen/_11sdp" />

                            </LinearLayout>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</RelativeLayout>