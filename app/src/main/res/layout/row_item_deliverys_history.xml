<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relvHeader"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">
            <ImageView
                android:id="@+id/calender"
                android:src="@drawable/ic_calender"
                android:contentDescription="@string/image"
                android:layout_width="@dimen/_19sdp"
                android:layout_height="@dimen/_19sdp"/>
            <TextView
                android:id="@+id/txtDate"
                android:layout_toRightOf="@+id/calender"
                android:gravity="center"
                android:layout_marginStart="@dimen/_8sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txttitle"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_gravity="end"
                android:textSize="@dimen/_13sdp"
                android:visibility="invisible"
                android:textColor="@color/txt_radio_color"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/user_history_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linFooter"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginEnd="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.6">

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtDeliveryNo"
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:visibility="visible"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linWagonNo_"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <TextView
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/menu_text_color"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/_wagon_no_"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/txtWagonNo"
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/history_text"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linBoDate_"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:visibility="visible"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/menu_text_color"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/_date_"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/txtBordereuDate"
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/history_text"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <TextView
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/menu_text_color"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/grade_name_"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/txtGradeName_"
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/history_text"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/menu_text_color"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/customer_name_"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/txtCustomerName_"
                            android:gravity="start"
                            android:text="AKACHI WOODS- LOGS"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/history_text"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linBoNo_"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/menu_text_color"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/bordereu_no_"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/txtBordereuNo"
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/history_text"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:visibility="visible">
                        <TextView
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/menu_text_color"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/truck_no_"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/txtTruckNo"
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/history_text"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <TextView
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:textAllCaps="false"
                            android:textColor="@color/menu_text_color"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/no_of_logs"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:id="@+id/txtNoOfLogs"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/history_text"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <TextView
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/menu_text_color"
                            android:fontFamily="@font/poppins_regular"
                            android:text="@string/forest_"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/txtForest"
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/history_text"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1.4">
                    <LinearLayout
                        android:id="@+id/linActionStatus"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_gravity="end"
                        android:visibility="visible"
                        android:background="@drawable/bg_curve_action_button"
                        android:layout_marginBottom="@dimen/_2sdp">

                        <TextView
                            android:id="@+id/txtActionStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="@string/pending"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linStatus"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_gravity="end"
                        android:visibility="visible"
                        android:background="@color/light_green"
                        android:layout_marginTop="@dimen/_4sdp">

                        <TextView
                            android:id="@+id/txtStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="@string/inspection"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@color/colorGreyLight"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>