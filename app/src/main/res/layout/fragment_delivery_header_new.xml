                                    android:textSize="@dimen/_12sdp" />

                                <LinearLayout
                                    android:id="@+id/linBordero_No"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginTop="@dimen/_6sdp"
                                    android:layout_marginStart="@dimen/_3sdp"
                                    android:layout_marginEnd="@dimen/_3sdp"
                                    android:background="@drawable/bg_for_editest">
                                    <EditText
                                        android:id="@+id/txtBordero_No"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/txt_spinner_color"
                                        android:fontFamily="@font/poppins_regular"
                                        android:layout_gravity="center"
                                        android:singleLine="true"
                                        android:maxLength="11"
                                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
                                        android:textSize="@dimen/_11sdp"
                                        android:drawableTint="@color/bg_arrow_tint"
                                        android:layout_marginLeft="@dimen/_9sdp"
                                        android:layout_marginRight="@dimen/_9sdp"
                                        android:textColorHint="@color/txt_spinner_color"
                                        android:backgroundTint="@color/white"
                                        />
                                </LinearLayout>
                            </LinearLayout>











                            <Button
                                android:id="@+id/btnConfirm"
                                android:layout_below="@+id/linContent"
                                android:layout_width="match_parent"
