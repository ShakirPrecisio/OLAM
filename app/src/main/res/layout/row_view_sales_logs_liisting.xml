<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:weightSum="2">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                >
            <TextView
                android:id="@+id/txtLog"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/_1sdp"
                android:textColor="@color/menu_text_color"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/log_no_"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/txt_log_no"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/listing_text_color"
                android:fontFamily="@font/poppins_regular"
                android:text=" 123/1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
              android:gravity="end"
                >
                <ImageView
                    android:id="@+id/ivDelete"
                    android:src="@drawable/ic_cross"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image"
                    android:background="@drawable/_ripple"
                    android:layout_width="@dimen/_26sdp"
                    android:clickable="true"
                    android:visibility="visible"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_margin="@dimen/_7sdp"/>

                <ImageView
                    android:id="@+id/ivAdd"
                    android:src="@drawable/ic_add"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image"
                    android:background="@drawable/_ripple"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:clickable="true"
                    android:layout_margin="@dimen/_7sdp"/>

                <ImageView
                    android:id="@+id/ivEdit"
                    android:src="@drawable/ic_edit"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image"
                    android:background="@drawable/_ripple"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:clickable="true"
                    android:layout_margin="@dimen/_7sdp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_5sdp">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/menu_text_color"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/plaque_no"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/txtPlaque_no"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/listing_text_color"
                    android:fontFamily="@font/poppins_regular"
                    android:text=" 123/1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1.2">
                <TextView
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/menu_text_color"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/essence"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/txtEssence"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/listing_text_color"
                    android:fontFamily="@font/poppins_regular"
                    android:text=" 123/1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_weight="1">
                <TextView
                    android:gravity="center"
                    android:visibility="invisible"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/menu_text_color"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/quality"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/txtQunatity"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/listing_text_color"
                    android:fontFamily="@font/poppins_regular"
                    android:text=" 123/1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_gravity="end|center"
                android:layout_weight="0.5">
                <ImageView
                    android:id="@+id/ivMore"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_more"
                    android:clickable="true"
                    android:background="@drawable/_ripple"
                    android:contentDescription="@string/image"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_16sdp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linFooter"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:visibility="visible"
                android:weightSum="4">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.9"
                    android:visibility="gone">
                    <TextView
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/menu_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/refraction_diam"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/txtRefraDia"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/listing_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.9">
                    <TextView
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/menu_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/refraction_length"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/txtRefraLength"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/listing_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/menu_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/grade"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/txtGrade"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/listing_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1.2">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:visibility="gone"
                android:weightSum="4">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.9">
                    <TextView
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/menu_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/dia"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/txtDia"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/listing_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:text=" 123/1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.9">
                    <TextView
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/menu_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/_long"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/txtLong"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/listing_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:text=" 123/1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:gravity="center"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/menu_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/cbm"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/txtCBM"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/listing_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:text=" 123/1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1.2">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:visibility="gone"
                android:weightSum="2">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:gravity="center"
                        android:textSize="@dimen/_11sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/menu_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/refraction_diam"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <EditText
                        android:id="@+id/edtRefractionDia"
                        android:gravity="center"
                        android:inputType="number"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/listing_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:gravity="center"
                        android:textSize="@dimen/_11sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/menu_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/refraction_length"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <EditText
                        android:id="@+id/edtRefractionLog"
                        android:gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:inputType="number"
                        android:textColor="@color/listing_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_4sdp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:gravity="center"
                        android:textSize="@dimen/_11sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/menu_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/grade"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <EditText
                        android:id="@+id/edtGrade"
                        android:gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:inputType="number"
                        android:textColor="@color/listing_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:gravity="center"
                        android:textSize="@dimen/_11sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/menu_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/remark"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <EditText
                        android:id="@+id/edtRemark"
                        android:gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:inputType="number"
                        android:textColor="@color/listing_text_color"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:gravity="center">
                <ImageView
                    android:id="@+id/ivRight"
                    android:src="@drawable/ic_right"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image"
                    android:background="@drawable/_ripple"
                    android:layout_width="@dimen/_32sdp"
                    android:clickable="true"
                    android:visibility="gone"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_margin="@dimen/_7sdp"/>

                <ImageView
                    android:id="@+id/ivPrint"
                    android:src="@drawable/ic_print"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image"
                    android:background="@drawable/_ripple"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:clickable="true"
                    android:layout_margin="@dimen/_7sdp"/>

                <ImageView
                    android:src="@drawable/ic_edit"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image"
                    android:background="@drawable/_ripple"
                    android:layout_width="@dimen/_32sdp"
                    android:clickable="true"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_margin="@dimen/_7sdp"/>

                <ImageView
                    android:src="@drawable/ic_delete"
                    android:layout_gravity="center"
                    android:contentDescription="@string/image"
                    android:background="@drawable/_ripple"
                    android:clickable="true"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_margin="@dimen/_7sdp"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@color/colorGreyLight"
            />

    </LinearLayout>
</RelativeLayout>