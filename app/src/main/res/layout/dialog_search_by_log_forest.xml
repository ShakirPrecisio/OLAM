<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:elevation="@dimen/_8sdp"
        android:background="@drawable/green_cirlce_image">
        <ImageView
            android:id="@+id/ivLogCancel"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/icon_cancel"
            android:contentDescription="@string/image" />
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:cardBackgroundColor="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- <ImageView
                 android:id="@+id/ivLogCancel"
                 android:layout_height="@dimen/_25sdp"
                 android:layout_width="@dimen/_30sdp"
                 android:src="@drawable/icon_cancel"
                 app:tint="@color/gray_1000"
                 android:layout_marginTop="@dimen/_2sdp"
                 android:padding="@dimen/_3sdp"
                 android:layout_marginEnd="@dimen/_3sdp"
                 android:layout_alignParentRight="true"/>-->
            <LinearLayout
                android:id="@+id/linContent"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_25sdp">

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/_25sdp"
                        >
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:layout_marginBottom="@dimen/_15sdp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_11sdp"
                                android:text="@string/forest"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:textColor="@color/colorPrimaryDark"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_centerInParent="true"
                                android:layout_centerHorizontal="true"/>
                            <LinearLayout
                                android:id="@+id/linLogForest"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:clickable="true"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:background="@drawable/bg_for_editest"
                                >
                                <EditText
                                    android:id="@+id/edtForest"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_3sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:backgroundTint="@color/white"
                                    android:drawableRight="@drawable/bg_down_arrow_"
                                    android:drawableTint="@color/bg_arrow_tint"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:fontFamily="@font/poppins_regular"
                                    android:hint="@string/select"
                                    android:inputType="none"
                                    android:singleLine="true"
                                    android:text="@string/select"
                                    android:textColor="@color/log_text_color"
                                    android:textColorHint="@color/log_text_color"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_11sdp"
                            android:text="@string/log_no"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_centerInParent="true"
                            android:layout_centerHorizontal="true"/>
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="3">
                            <LinearLayout
                                android:id="@+id/linLogNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="0.5"
                                android:background="@drawable/bg_for_editest"
                                android:layout_marginStart="@dimen/_5sdp">
                                <EditText
                                    android:id="@+id/edt_log"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/log_text_color"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_gravity="center"
                                    android:singleLine="true"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:layout_weight="0.5"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:drawableTint="@color/gray_400"
                                    android:textColorHint="@color/log_text_color"
                                    android:backgroundTint="@color/white"
                                    />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_weight="1.4">
                                <TextView
                                    android:id="@+id/edt_log_line"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/poppins_regular"
                                    android:gravity="center"
                                    android:text="/"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:textColor="@color/log_text_color"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/linLogNumber2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1.1"
                                android:background="@drawable/bg_for_editest"
                                android:layout_marginStart="@dimen/_5sdp">
                                <EditText
                                    android:id="@+id/edt_log2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/log_text_color"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_gravity="center"
                                    android:singleLine="true"
                                    android:layout_weight="1.1"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:drawableTint="@color/gray_400"
                                    android:textColorHint="@color/log_text_color"
                                    android:backgroundTint="@color/white"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/linSearchByLogNo"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/linContent"
                android:background="@color/confirm_print_bg">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:text="@string/search"/>

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>