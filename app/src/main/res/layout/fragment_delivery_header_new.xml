                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="@string/Boreau_type"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/_12sdp" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/_6sdp">
                                    <RadioGroup
                                        android:id="@+id/rgBordereu"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        >
                                        <RadioButton
                                            android:id="@+id/rbElectronic"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/electronic_bordereau"
                                            android:fontFamily="@font/poppins_regular"
                                            android:textColor="@color/txt_radio_color"
                                            android:checked="false"
                                            android:textSize="@dimen/_13sdp"
                                            />

                                        <RadioButton
                                            android:id="@+id/rbManual"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/manual_bordereau"
                                            android:checked="false"
                                            android:layout_marginStart="@dimen/_10sdp"
                                            android:fontFamily="@font/poppins_regular"
                                            android:textColor="@color/txt_radio_color"
                                            android:textSize="@dimen/_13sdp" />
                                    </RadioGroup>
