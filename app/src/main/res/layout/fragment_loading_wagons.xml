<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:layout_marginTop="?actionBarSize"
    >
    <!---->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_top_rounded_background"
        android:layout_marginTop="@dimen/_18sdp"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:orientation="vertical"
            tools:ignore="UselessParent">
            <TextView
                android:id="@+id/txtResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPremiumBlack"
                android:textSize="@dimen/_16sdp"
                android:text="Scan Data:"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"/>


            <Button
                android:id="@+id/btnScanWithMob"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_38sdp"
                android:layout_marginEnd="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/curve_button"
                android:padding= "@dimen/_5sdp"
                android:textAllCaps="false"
                android:text="Scan With Android Scanner"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"/>

            <Button
                android:id="@+id/btnScanWitZebra"
                android:layout_below="@+id/btnScanWithMob"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_38sdp"
                android:layout_marginEnd="@dimen/_38sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@drawable/curve_button"
                android:padding= "@dimen/_5sdp"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                android:text="Scan With Zebra Device Scanner"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"/>
        </RelativeLayout>
        </RelativeLayout>

</LinearLayout>